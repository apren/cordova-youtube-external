<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova.plugin.youtubeexternal" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0">
  <name>YouTube External Opener</name>
  <description>Force YouTube links to open outside the WebView.</description>
  <license>MIT</license>
  <keywords>cordova, youtube, external, intent</keywords>
  <js-module name="noop" src="www/noop.js"></js-module>

  <!-- ANDROID -->
  <platform name="android">
    <engines>
      <engine name="cordova-android" version=">=10.0.0" />
    </engines>
    <source-file src="src/android/YoutubeExternalOpener.java"
                 target-dir="src/cordova/plugin/youtubeexternal" />
  </platform>

  <!-- iOS -->
  <platform name="ios">
    <engines>
      <engine name="cordova-ios" version=">=6.2.0" />
    </engines>
    <source-file src="src/ios/YoutubeExternalOpener.swift" />
  </platform>
</plugin>
